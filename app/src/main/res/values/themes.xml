<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HelpMeat" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Navigation bar color. -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightNavigationBar">true</item>
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/TextViewTheme</item>
        <item name="editTextStyle">@style/EditTextTheme</item>
        <item name="buttonStyle">@style/ButtonTheme</item>
        <item name="toolbarStyle">@style/ToolbarTheme</item>
    </style>

    <!-- Action bar theme. -->
    <style name="ToolbarTheme" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/TitleTextTheme</item>
    </style>
    <style name="TitleTextTheme" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/app_toolbar_text_size</item>
        <item name="android:textColor">@color/heavy_pink</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- TextView theme. -->
    <style name="TextViewTheme" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/helpmeat_basic</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">@dimen/default_line_spacing_extra</item>
        <item name="android:padding">@dimen/default_text_view_padding</item>
    </style>
    <style name="NonePaddingTextViewTheme" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/helpmeat_basic</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">@dimen/default_line_spacing_extra</item>
    </style>

    <!-- EditText theme. -->
    <style name="EditTextTheme" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/helpmeat_basic</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:padding">@dimen/default_edit_text_padding</item>
    </style>

    <!-- Button theme. -->
    <style name="ButtonTheme" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/helpmeat_basic</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:padding">@dimen/default_button_padding</item>
    </style>
</resources>